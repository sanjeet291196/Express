<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.sanjeet291196.express">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumbersActivity"
            android:label="@string/numbers"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".FamilyMemberActivity"
            android:label="@string/family"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".ColorsActivity"
            android:label="@string/colors"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".PhraseActivity"
            android:label="@string/phrase"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:parentActivityName=".MainMenu" />
    </application>

</manifest>