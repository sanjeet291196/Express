<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/item_icon"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ItemEnglishTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ItemIcon"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/ItemHindiTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemEnglishTranslation"
        android:layout_toEndOf="@id/ItemIcon"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/ItemLocalTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemHindiTranslation"
        android:layout_toEndOf="@id/ItemIcon"
        android:text="@string/app_name" />

</RelativeLayout>